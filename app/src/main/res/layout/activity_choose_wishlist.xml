<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ChooseWishlistActivity">

    <LinearLayout
        android:id="@+id/top_bar_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_default"
        android:background="@color/colorTopBar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_top_bar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/text_top_bar_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_choose_wishlist"
            android:textSize="@dimen/top_bar_text_size"
            android:layout_marginStart="80dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_wishlist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/top_bar_default">

        <ListView
            android:id="@+id/list_wishlist_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="@id/frame_wishlist_list"
        app:menu="@menu/bottom_navigation" />

</android.support.constraint.ConstraintLayout>