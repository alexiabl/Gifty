<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MyProfileWishlistActivity">

    <LinearLayout
        android:id="@+id/top_bar_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_default"
        android:background="@color/colorTopBar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_top_bar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/text_top_bar_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_wishlist"
            android:textSize="@dimen/top_bar_text_size"
            android:layout_marginStart="100dp"
            android:layout_gravity="center" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_my_wishlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_my_wishlist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_bar_default"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_wishlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:text="Birthday"
                android:textSize="@dimen/top_bar_text_size" />

            <TextView
                android:id="@+id/text_wishlist_deadline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="end|center"
                android:layout_marginEnd="20dp"
                android:text="In 10 days"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_my_wishlist_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="85dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_wishlist_filter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="10dp"
                android:text="Order by:" />

            <Button
                android:id="@+id/btn_filters"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:background="@drawable/layout_emailboxwhite" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_my_wishlist_items"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/frame_my_wishlist"
        android:layout_height="wrap_content">

        <GridView
            android:id="@+id/grid_my_wishlist_items"
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridView>

    </FrameLayout>


    <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="@id/frame_my_wishlist"
        app:itemIconTint="@drawable/bottom_nav_colors"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:menu="@menu/bottom_navigation" />

</android.support.constraint.ConstraintLayout>