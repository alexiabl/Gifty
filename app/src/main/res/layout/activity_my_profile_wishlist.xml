<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MyProfileWishlistActivity">

    <LinearLayout
        android:id="@+id/my_top_bar_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_default"
        android:background="@color/colorTopBar"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/my_img_top_bar_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/my_text_top_bar_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/top_bar_text_size"
            android:layout_marginStart="100dp"
            android:layout_gravity="center" />

    </LinearLayout>


        <LinearLayout
            android:id="@+id/my_layout_my_wishlist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/my_top_bar_action"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_text_wishlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="20dp"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/my_text_wishlist_deadline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="50dp"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>


    <RelativeLayout
        android:id="@+id/my_frame_my_wishlist_items"
            android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent">

            <GridView
                android:id="@+id/my_grid_my_wishlist_items"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </GridView>

        </RelativeLayout>

    <include
        layout="@layout/layout_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/my_frame_my_wishlist_items" />


</android.support.constraint.ConstraintLayout>