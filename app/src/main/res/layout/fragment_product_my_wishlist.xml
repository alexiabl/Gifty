<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_product_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductMyWishlistFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/product_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/round_border" />

        <ImageView
            android:id="@+id/image_price"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/image_product"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/layout_product_price"
            android:src="@drawable/ic_dollars2" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="207dp"
            android:src="@drawable/ic_close_black_24dp" />

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="93dp"
            android:layout_height="23dp"
            android:layout_below="@+id/image_product"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            android:width="286.84dp"
            android:height="9.5dp"
            android:gravity="start"
            android:textColor="@color/colorText"
            android:textSize="9sp" />


        <TextView
            android:id="@+id/text_brand"
            android:layout_width="wrap_content"
            android:layout_height="14.9dp"
            android:layout_below="@+id/image_product"
            android:layout_alignEnd="@+id/image_product"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/text_product_name"
            android:gravity="end"
            android:textSize="9sp" />

    </RelativeLayout>


</FrameLayout>