<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_user_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_border"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_search_friends_profile"
        android:layout_width="@dimen/search_friends_image_size"
        android:layout_height="@dimen/search_friends_image_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_border" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/search_friends_text_margin"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layout_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_user_name">

            <TextView
                android:id="@+id/text_num_wishlists"
                android:layout_width="wrap_content"
                android:layout_height="14.9dp"
                android:layout_marginStart="@dimen/search_friends_text_margin"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image_add_friend"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_add_friend" />

        </LinearLayout>


</RelativeLayout>

