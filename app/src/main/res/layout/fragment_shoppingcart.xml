<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShoppingCartItemFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_wishlist_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">


        <com.gifty.hci.gifty.RoundedImageView
            android:id="@+id/image_product"
            android:layout_width="@dimen/wishlist_image_preview_size"
            android:layout_height="@dimen/wishlist_image_preview_size"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_gifty_logo" />

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:text="Gold Standard Whey Protein"
            android:textColor="@color/colorText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_gift_to"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_product_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:text="Emil Nielsen" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_gift_to"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="6dp"
            android:text="Qty: 1" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_quantity"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:text="$60" />

        <TextView
            android:id="@+id/text_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_quantity"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:text="SPORTMASTER" />


    </RelativeLayout>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_wishlist_preview"
        android:background="@color/colorTextSoft" />

</FrameLayout>